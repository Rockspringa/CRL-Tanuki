{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "res"
  ],
  "include": [
    "src"
  ]
}
