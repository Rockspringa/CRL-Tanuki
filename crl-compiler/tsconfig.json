{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonJS",
    "baseUrl": "./",
    "sourceMap": true,
    "declarationMap": true,
    "declarationDir": "./@types",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "res"
  ],
  "include": [
    "src/**/*"
  ]
}
